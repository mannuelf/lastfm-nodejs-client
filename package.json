{
  "name": "lastfm-nodejs-client",
  "version": "1.4.4",
  "description": "A NodeJS wrapper client for LastFm API. Fetching public data by username using the LastFm public API",
  "main": "./lib/cjs/index.js",
  "scripts": {
    "clean": "del-cli ./lib",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./configs/tsconfig.esm.json && move-file lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
    "test": "npx playwright test --reporter=list",
    "semantic-release": "semantic-release",
    "prepack": "npm run build"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "types": "./lib/cjs/types/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "client",
    "lastFm",
    "nodejs",
    "typescript",
    "node"
  ],
  "author": "Mannuel Ferreira",
  "maintainers": [
    "Mannuel Ferreira"
  ],
  "license": "MIT",
  "dependencies": {
    "cross-fetch": "^4.0.0",
    "dotenv": "^16.3.1",
    "semantic-release": "^22.0.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.38.1",
    "@types/node": "^20.7.1",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "bun-types": "latest",
    "del-cli": "^5.1.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^39.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "move-file-cli": "^3.0.0",
    "typescript": "^5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mannuelf/lastfm-nodejs-client.git"
  },
  "bugs": {
    "url": "https://github.com/mannuelf/lastfm-nodejs-client/issues"
  },
  "homepage": "https://github.com/mannuelf/lastfm-nodejs-client#readme"
}